			{{!--				<option>Hamburger</option>--}}
			{{!--				<option>Salad</option>--}}
			{{!--			</select>--}}
			{{!--			</span>--}} {{!-- </div>--}} {{!--
			</div>--}}

			<div class="field">
				<label class="label">Want to upload a different photo?</label>
				<div class="control">
					<div class="file is-primary">
						<label class="file-label">
    				<input name="photo" class="file-input" type="file" accept="image/*" capture>
    				<span class="file-cta">
      				<span class="file-icon">
        				<i class="fa fa-camera"></i>
    					</span>
      				<span class="file-label">Photo</span>
    				</span>
  					</label>
					</div>
				</div>
			</div>
			
			<div class="field">
				<div class="control">
					<button id="editDish" class="button is-danger" type="submit">Create</button>
				</div>
			</div>
		</form>
		
	</div>

