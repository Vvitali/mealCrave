<div class="hero is-small">
	<div class="hero-head">
		<a id="logout" class="has-text-light is-pulled-right">Logout</a>
	</div>

	<div class="hero-body">
		<h1 class="has-text-light is-size-2 title">mealCrave.</h1>
	</div>
</div>
